AnchorLayoutExample:

<AnchorLayoutExample>:
    # right, left, center
    anchor_x: 'left'
    # bottom, top, center
    anchor_y: 'top'
    Button:
        text: 'SIVA1'
        size_hint: 0.1, 0.1


<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: 'A'
        #size: '100dp','80dp'
        size_hint: 0.5, 0.5
        #height: '60dp'
        #x, center_x, right
        #y, center_y, top
        pos_hint: {"center_y":0.5}

    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '20dp'
        Button:
            text: 'B1'
        Button:
            text: 'B2'
        Button:
            text: 'B3'
        Button:
            text: 'B4'
    Label:
        text: 'C'


<MainWidget>:
    Button:
        text: 'siva1'
        size: '100dp','80dp'
        pos: '100dp','200dp'
        color: 0,0,1,1
    Label:
        text: 'siva2'
        size: '100dp','80dp'
        pos: '200dp','300dp'
        color: 1,0,0,1

